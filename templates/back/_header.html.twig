<header class="flex items-center h-20 px-6 sm:px-10 bg-white">
    <div class="relative w-full max-w-md sm:-ml-2">
        <i class="fa-solid fa-search absolute top-0 left-0 mt-3 ml-3 text-gray-400"></i>
        <input type="text" role="search" placeholder="Rechercher..." class="py-2 pl-10 pr-4 w-full border-4 border-transparent placeholder-gray-400 focus:bg-gray-50 rounded-lg" />
    </div>
    <div class="flex flex-shrink-0 items-center ml-auto">
        <button class="inline-flex items-center p-2 hover:bg-gray-100 focus:bg-gray-100 rounded-lg">
            <span class="sr-only">Profil d'utilisateur</span>
            <div class="hidden md:flex md:flex-col md:items-end md:leading-tight">
                {% if app.user %}
                    <span class="font-semibold">{{ app.user.name }}</span>
                    <span class="text-sm text-gray-600">{{ app.user.roles|join(', ') }}</span>
                {% endif %}
            </div>
            <span class="h-12 w-12 ml-2 sm:ml-3 mr-2 bg-gray-100 rounded-full overflow-hidden">
                <img src="https://randomuser.me/api/portraits/women/9.jpg" alt="user profile photo" class="h-full w-full object-cover">
            </span>
            <i class="fa-solid fa-angle-down"></i>
        </button>
        <div class="border-l pl-3 ml-3 space-x-1">
            <a href="{{ path('front_app_logout') }}" type="button" class="relative p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-600 focus:bg-gray-100 focus:text-gray-600 rounded-full">
                <span class="sr-only">Se d√©connecter</span>
                <i class="fa-solid fa-right-to-bracket"></i>
            </a>
        </div>
    </div>
</header>