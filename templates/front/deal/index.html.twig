{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
  {% if receivedExchangeRequests %}
    <h5 class="text-2xl dark:text-gray-700" style="margin-top:2rem; text-align:center">Demande(s) d'échange reçue(s)</h5>
    <div class="flex flex-col mx-auto justify-center flex-wrap mt-[2rem]">
      {% for receivedExchange in receivedExchangeRequests %}
        <div class="w-1/2 p-6 bg-white rounded-lg shadow dark:bg-white dark:border-gray-700 shadow-lg shadow-indigo-500/50" style="margin:auto; margin-bottom:1rem">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-700">Demande d'échange pour l'objet {{ receivedExchange.secondUserObject.name }}</h5>

          <p>
            <b>{{ receivedExchange.firstUser.name }}</b> a demandé un échange contre votre objet <b>{{ receivedExchange.secondUserObject.name }}</b>. Explorez ses objet pour faire une contre proposition d'échange.
          </p>
          <span class="text-xs font-normal py-1 px-2 uppercase rounded-full text-pink-600 bg-pink-200 uppercase last:mr-0 mr-1">Statut actul de la demande : {{ receivedExchange.status }}</span>
          <p class="mb-1 font-normal text-gray-300 dark:text-gray-900">
            <b>Statut de la demande</b>: {{ receivedExchange.secondeUserResponse ? '' : '' }}
          </p>

          <p class="mb-1 font-normal text-gray-300 dark:text-gray-900">
            <b>Demande envoyé par</b>: <a class="underline" href="{{ path('front_profil_user', { id: receivedExchange.firstUser.id, deal: receivedExchange.id }) }}">{{ receivedExchange.firstUser.email }}</a>
          </p>

          <div class="flex">
            {% if receivedExchange %}
              {% if receivedExchange.firstUser and receivedExchange.secondUser and receivedExchange.firstUserObject and receivedExchange.secondUserObject and app.user == receivedExchange.firstUser and not receivedExchange.firstUserResponse and receivedExchange.status == "Crée" %}
                <a href="{{ path('front_app_deal_edit', { id: receivedExchange.id, response: 'yes', userId: app.user.id, user: 'first' }) }}" class="inline-flex items-center px-3 py-2 mr-[1rem] text-sm font-medium text-center text-white bg-green-500 rounded-lg hover:bg-green-800"><b>Accepter l'échange</b></a>
                <a href="{{ path('front_app_deal_edit', { id: receivedExchange.id, response: 'no', userId: app.user.id, user: 'first' }) }}" class="inline-flex items-center px-3 py-2 mr-[1rem] text-sm font-medium text-center text-white bg-yellow-500 rounded-lg hover:bg-yellow-800"><b>Refuser l'échange</b></a>
              {% endif %}

              {% if receivedExchange.status == "Crée" %}
                          <a href="{{ path('front_app_items_exchange_response', { id: receivedExchange.firstUser.id, deal: receivedExchange.id }) }}" class="inline-flex bg-blue-600 items-center px-3 py-2 mr-[1rem] text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Explorer les objets de {{ receivedExchange.firstUser.name }}</a>
              {% endif %}
      
              {% if receivedExchange.secondeUserResponse != null and app.user == receivedExchange.secondUser %}
                {% if receivedExchange.secondeUserResponse == true %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-green-800 bg-green-200 last:mr-0 mr-1">Echange accepté par vous</span>
                {% endif %}

                {% if receivedExchange.secondeUserResponse == false %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-red-800 bg-red-200 last:mr-0 mr-1">Echange refusé par vous</span>
                {% endif %}
              {% endif %}

              {% if receivedExchange.firstUserResponse != null and app.user == receivedExchange.firstUser %}
                {% if receivedExchange.firstUserResponse == true %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-green-800 bg-green-200 last:mr-0 mr-1">Echange accepté par vous</span>
                {% endif %}

                {% if receivedExchange.firstUserResponse == false %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-red-800 bg-red-200 last:mr-0 mr-1">Echange refusé par vous</span>
                {% endif %}
              {% endif %}
            {% endif %}

            <form method="post" action="{{ path('front_app_deal_delete', { id: receivedExchange.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ receivedExchange.id) }}" />
              <button class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-600 rounded-lg hover:bg-red-800">Supprimer la demande</button>
            </form>
          </div>
        </div>
      {% else %}
        <div>
          <td colspan="5">no records found</td>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  {% if sentExchangeRequests %}
    <h5 class="text-2xl dark:text-gray-700" style="margin-top:2rem; text-align:center">Demande(s) d'échange envoyé(s)</h5>
    <div class="flex flex-col mx-auto justify-center flex-wrap mt-[2rem]">
      {% for sentExchange in sentExchangeRequests %}
        <div class="w-1/2 p-6 bg-white rounded-lg shadow dark:bg-white dark:border-gray-700 shadow-lg shadow-indigo-500/50" style="margin:auto; margin-bottom:1rem">
          <a href="#"><h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-700">Demande d'échange pour l'objet {{ sentExchange.secondUserObject.name }}</h5></a>
          <span class="text-xs font-normal py-1 px-2 uppercase rounded-full text-pink-600 bg-pink-200 uppercase last:mr-0 mr-1">Statut actul de la demande : {{ sentExchange.status }}</span>
          <p class="mb-1 font-normal text-gray-300 dark:text-gray-900">
            <b>Réponse de {{ sentExchange.secondUser.name }}</b> : {{ sentExchange.secondeUserResponse ? '' : '' }}
          </p>
          <p class="mb-1 font-normal text-gray-300 dark:text-gray-900">
            <b>Demande envoyé à</b>: <a class="underline" href="{{ path('front_profil_user', { id: sentExchange.secondUser.id, deal: sentExchange.id }) }}">{{ sentExchange.secondUser.email }}</a>
          </p>

          <div class="flex mr-2">
            {% if sentExchange %}
              {% if sentExchange.firstUser and sentExchange.secondUser and sentExchange.firstUserObject and sentExchange.secondUserObject and app.user == sentExchange.firstUser and not sentExchange.firstUserResponse and sentExchange.status == "Crée" %}
                <a href="{{ path('front_app_deal_edit', { id: sentExchange.id, response: 'yes', userId: app.user.id, user: 'first' }) }}" class="inline-flex items-center px-3 py-2 mr-[1rem] text-sm font-medium text-center text-white bg-green-500 rounded-lg hover:bg-green-800"><b>Accepter l'échange</b></a>
                <a href="{{ path('front_app_deal_edit', { id: sentExchange.id, response: 'no', userId: app.user.id, user: 'first' }) }}" class="inline-flex items-center px-3 py-2 mr-[1rem] text-sm font-medium text-center text-white bg-yellow-500 rounded-lg hover:bg-yellow-800"><b>Refuser l'échange</b></a>
              {% endif %}

              {% if sentExchange.secondeUserResponse != null and app.user == sentExchange.secondUser %}
                {% if sentExchange.secondeUserResponse == true %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-green-800 bg-green-200 last:mr-0 mr-1">Echange accepté par vous</span>
                {% endif %}

                {% if sentExchange.secondeUserResponse == false %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-red-800 bg-red-200 last:mr-0 mr-1">Echange refusé par vous</span>
                {% endif %}
              {% endif %}

              {% if sentExchange.firstUserResponse != null and app.user == sentExchange.firstUser %}
                {% if sentExchange.firstUserResponse == true %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-green-800 bg-green-200 last:mr-0 mr-1">Echange accepté par vous</span>
                {% endif %}

                {% if sentExchange.firstUserResponse == false %}
                  <span class="inline-flex items-center text-xs font-normal inline-block py-1 px-2 rounded text-red-800 bg-red-200 last:mr-0 mr-1">Echange refusé par vous</span>
                {% endif %}
              {% endif %}
            {% endif %}

            <form method="post" action="{{ path('front_app_deal_delete', { id: sentExchange.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sentExchange.id) }}" />
              <button class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-600 rounded-lg hover:bg-red-800">Supprimer la demande</button>
            </form>
          </div>
        </div>
      {% else %}
        <div>
          <td colspan="5">no records found</td>
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endblock %}
