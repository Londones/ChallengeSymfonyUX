{# {{ form_start(form) }} #}

<div class="sm:container mt-[4rem] rounded-lg mx-auto">
  <div class="flex mx-auto mt-[4rem]">
    <div class="bg-gray-50 w-3/5 rounded-lg h-auto mx-auto">
    <h1>Ajouter un objet</h1>
      {# <h6 class="font-medium leading-tight -mx-4 mb-6 text-xl mt-0 mb-2 text-gray-800 md:mx-auto">Ajouter un objet</h6> #}
      <div class="flex flex-wrap -mx-3 md:mx-auto">

        <div class="w-full px-3 mb-6 md:mb-0 mb-2 mt-4">
          <label class="block tracking-wide mb-2 text-gray-700">Nom de l'objet</label>
          	{{ form_widget(form.name, {'attr': {'class': 'appearance-none block w-full border-indigo-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white', 'placeholder' : 'Nom de l\'objet'}})}}
          {# <input class="appearance-none block w-full border-indigo-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" placeholder="Nom de l'objet" /> #}
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 md:mx-auto mb-2">
        <div class="w-full px-3">
          <label class="block tracking-wide mb-2 text-gray-700">Description</label>
            {{ form_widget(form.description, {'attr': {'class': 'appearance-none block w-full border-indigo-300 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500', 'placeholder' : 'Description'}})}}
          {# <textarea class="appearance-none block w-full border-indigo-300 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="Description"></textarea> #}
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 md:mx-auto mb-2">
        <div class="w-full px-3">
          <label class="block tracking-wide mb-2 text-gray-700">Uploader une image</label>
          <input class="shadow-inner shadow-indigo-300/50 block w-full rounded py-3 px-4 leading-tight focus:outline-none focus:border-gray-500" type="file" placeholder="Description" />
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-2 md:mx-auto mb-2">
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block tracking-wide mb-2 text-gray-700">Catégorie</label>
          <div class="relative">
            <select class="block appearance-none w-full border-indigo-300 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500 text-gray-700">
            {% for categorie in categories %}
              <option>{{categorie.name}}</option>
            {% endfor %}
            </select>
          </div>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0 mb-2">
          <label class="block tracking-wide mb-2 text-gray-700">Statut initial</label>
          <div class="relative ">
            <select class="block appearance-none w-full border-indigo-300 text-gray-900 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500 text-gray-700">
              <option>Certifié</option>
              <option>Non certifié</option>
            </select>
          </div>
        </div>
      </div>
      <div class="space-x-2 m-4">
        <button type="button" class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg">Ajouter</button>
      </div>
    </div>
  </div>
</div>
{# {{ form_end(form) }} #}

