          	{{ form_widget(form.name, {'attr': {'class': 'appearance-none block w-full border-indigo-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white', 'placeholder' : 'Nom de l\'objet'}})}}
