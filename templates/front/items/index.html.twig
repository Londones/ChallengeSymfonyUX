{% block title %}

{% endblock %}

{% block body %}
  <div class="flex justify-center flex-wrap">
    {% for item in items %}
      <div class="rounded-lg shadow-lg bg-white max-w-sm ml-6 mr-6 mt-4 mb-4">
        <a href="#!"><img class="rounded-t-lg" src="https://images.unsplash.com/photo-1621568670868-24a7dfc590e9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1171&q=80" alt="" /></a>
        <div class="p-6">
          <h5 class="text-gray-900 text-xl font-medium mb-2 underline">{{ item.name }}</h5>
          <div class="flex justify-between text-center">
            <div style="width:fit-content" class="text-sm px-3 bg-blue-200 text-blue-800 rounded-full">{{ item.status }}</div>
            {% if item.isVerified == 1 %}
              <div style="width:fit-content" class="text-sm px-3 bg-green-200 text-green-800 rounded-full">Certifié</div>
            {% endif %}
            {% if item.isVerified == 0 %}
              <div style="width:fit-content" class="text-sm px-3 bg-red-200 text-red-800 rounded-full">Non certifié</div>
            {% endif %}
          </div>
          <br>
          <p class="text-gray-700 text-base mb-4 description">{{ item.description }}</p>
          <div class="flex justify-center space-x-2"> 
            <a type="button" href="{{ path('front_app_verification_request_new', { id: item.id }) }}" class="inline-block rounded-full border-2 border-primary px-6 pt-2 pb-[6px] text-xs font-medium uppercase leading-normal text-primary transition duration-150 ease-in-out hover:border-primary-600 hover:bg-neutral-500 hover:bg-opacity-10"
              data-te-ripple-init>
              Demander une vérification
            </a> {# TODO: readonly if already requested #}
          </div>

          <br>
          <div class="flex flex-nowrap justify-between">
            <a class="inline-block px-6 py-2.5 bg-gray-600 text-white font-medium text-xs uppercase rounded shadow-md hover:bg-gray-700" href="{{ path('front_app_items_show', { id: item.id }) }}">Voir plus</a>
            <a class="inline-block px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-violet-600 text-white font-medium text-xs uppercase rounded shadow-md shadow-violet-300 hover:shadow-lg hover:shadow-violet-300 focus:ring-0 transition duration-150 ease-in-out" href="{{ path('front_app_items_edit', { id: item.id }) }}">Modifier</a>
            {{ include('front/items/_delete_form.html.twig') }}
          </div>
          {% for category in item.category %}
            <div style="width:fit-content" class="text-sm px-3 bg-indigo-200 text-indigo-800 rounded-full mt-2">{{ category.name }}</div>
          {% endfor %}
      </div>
    {% endfor %}
  </div>
{% endblock %}
