<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>
      {% block title %}

      {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>" />
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body class=" h-screen flex flex-col">
          <nav class="relative w-full flex flex-wrap items-center justify-between py-2 shadow-md shadow-indigo-500/20 navbar navbar-expand-lg navbar-light">
        <div class="container-fluid w-full flex flex-wrap items-center justify-between px-6">
          <div class="collapse navbar-collapse flex-grow items-center">
              <a class="flex font-bold items-center text-gray-900 hover:text-gray-900 focus:text-gray-900 mt-2 lg:mt-0 mr-1" href="{{ path('front_home_index') }}">Match<span class="text-indigo-800">N</span>Collect</a>
          </div>
          <!-- Collapsible wrapper -->
          <!-- Right elements -->
          <div class="flex items-center relative">
            <!-- Icon -->
            <ul class="navbar-nav flex flex-row pl-0 list-style-none mr-auto">
            {% if app.user %}
              {% if "ROLE_ADMIN" in app.user.roles %}
              <li class="nav-item p-2">
                  <a class="nav-link text-gray-900 hover:text-gray-700" href="{{ path('back_app_user_index') }}">Admin</a>
              </li>
              {% endif %}
              <li class="nav-item p-2">
                  <a class="nav-link text-gray-900 hover:text-gray-700" href="{{ path('front_home_index') }}">Accueil</a>
              </li>
              <li class="nav-item p-2">
                  <a class="nav-link text-gray-900 hover:text-gray-700" href="{{ path('front_favorite_index') }}">Favoris</a>
              </li>
              <li class="nav-item p-2">
                <a href="{{ path('front_chat_index') }}" class="nav-link text-gray-900 hover:text-gray-700">Chat</a>
              </li>
              <li class="nav-item p-2">
                <a href="{{ path('front_app_deal_index') }}" class="nav-link text-gray-900 hover:text-gray-700" href="#">Demandes d'échange</a>
              </li>
              <li class="nav-item p-2">
                  <a class="nav-link text-gray-900 hover:text-gray-700" href="{{ path('front_profil_me') }}">Profil</a>
              </li>
              <li class="nav-item p-2">
                <a href="{{ path('front_app_logout') }}" class="hover:text-gray-900 transition duration-300 ease-in-out mb-4"><img class="w-6" src=" {{ asset('build/images/logout.png') }} " /></a>
              </li>
            {% else %}
              <li class="nav-item p-2">
                <a class="nav-link text-gray-900 hover:text-gray-700" href="/">Accueil</a>
              </li>
              <li class="nav-item p-2">
                <a class="nav-link text-gray-900 hover:text-gray-700" href="{{ path('front_app_register') }}">S'inscrire</a>
              </li>
              <li class="nav-item p-2">
                <a class="nav-link text-gray-900 hover:text-gray-700" href="{{ path('front_app_login') }}">Se connecter</a>
              </li>
            {% endif %}
          </ul>
        </div>
      </nav>

    {% include 'front/_message.html.twig' %}

    {% block body %}

    {% endblock %}
  </body>
</html>
