{% extends 'base.html.twig' %}

{% block title %}
  Profil
{% endblock %}

{% block body %}
  <div class="sm:container md:mx-auto shadow-lg shadow-indigo-500/20 bg-indigo-800">
    <div class="flex md:mx-auto rounded-lg bg-indigo-800 mt-[4rem]">
      <div class="bg-gray-50 w-1/5 rounded-lg mr-[1rem] ml-[4rem] mt-[4rem] mb-[4rem] shadow-2xl shadow-slate-50/20">
        <div class="rounded-lg m-8 w-48 mx-auto">
          {% if user.profilPicturePath %}
            <img class="rounded-lg" src="{{ user.profilPicturePath }}" rel="profil-picture" />
          {% endif %}

          {% if user.profilPicturePath == null %}
            <img class="rounded-lg" src="https://png.pngtree.com/png-clipart/20210608/ourlarge/pngtree-dark-gray-simple-avatar-png-image_3418404.jpg" rel="profil-picture" />
          {% endif %}
        </div>
        <div class="rounded-lg m-8 w-48 mx-auto">
          <p class="font-semibold">{{ user.name }}</p>
          <p class="font-thin">{{ user.email }}</p>
          <p>Membre depuis le {{ user.createdAt|date('m/d/Y') }}</p>

          <div class="flex flex-col justify-around mt-6">
          <a class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs uppercase rounded shadow-md hover:bg-blue-700" href="{{ path('front_app_user_edit', { id: user.id }) }}">Modifier le profil</a>
          {{ include('user/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
      <div class="bg-gray-50 w-4/5 rounded-lg ml-[1rem] mr-[4rem] mt-[4rem] mb-[4rem] shadow-2xl shadow-slate-50/20 h-auto">
        <div class="mx-auto m-[2rem] flex justify-center">
          <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" href="{{ path('front_app_items_new') }}">Ajouter un objet</a>
        </div>
        <!-- Cards des objets! -->
        <h3 class="font-medium leading-tight text-3xl mt-0 mb-2 text-gray-800 ml-[9rem] underline">Mes objets</h3>
        {% include 'front/items/index.html.twig' %}
      </div>
    </div>
  </div>
{% endblock %}
