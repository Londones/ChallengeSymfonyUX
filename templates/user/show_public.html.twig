{% extends 'base.html.twig' %}

{% block title %}
  Profil
{% endblock %}

{% block body %}
  <div class="sm:container md:mx-auto shadow-lg shadow-indigo-500/20 bg-indigo-800">
    <div class="flex md:mx-auto rounded-lg bg-indigo-800">
      <div class="bg-gray-50 w-1/5 rounded-lg mr-[1rem] ml-[4rem] mt-[4rem] mb-[4rem] shadow-2xl shadow-slate-50/20">
        <div class="rounded-lg m-8 w-48 mx-auto">
          {% if user.image %}
            <img src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="{{ user.name }}" />
          {% endif %}

          {% if user.image == null %}
            <img class="rounded-lg" src="https://png.pngtree.com/png-clipart/20210608/ourlarge/pngtree-dark-gray-simple-avatar-png-image_3418404.jpg" rel="profil-picture" />
          {% endif %}
        </div>
        <div class="rounded-lg m-8 w-48 mx-auto">
          <p class="font-semibold">{{ user.name }}</p>
          <p class="font-thin">{{ user.email }}</p>
          <p>Membre depuis le {{ user.createdAt|date('m/d/Y') }}</p>
        </div>
      </div>
      <div class="bg-gray-50 w-4/5 rounded-lg ml-[1rem] mr-[4rem] mt-[4rem] mb-[4rem] shadow-2xl shadow-slate-50/20 h-auto">
        <h3 class="font-medium leading-tight text-3xl mt-0 mb-2 text-gray-800 ml-[9rem] underline">Objet de {{user.name}}</h3>
        <div class="flex justify-center flex-wrap">
          {% for item in items %}
            <div class="rounded-lg shadow-lg bg-white max-w-sm ml-6 mr-6 mt-4 mb-4">
              <a href="#!"><img class="rounded-t-lg" src="https://images.unsplash.com/photo-1621568670868-24a7dfc590e9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1171&q=80" alt="" /></a>
              <div class="p-6">
                <h5 class="text-gray-900 text-xl font-medium mb-2 underline">{{ item.name }}</h5>
                <div style="width:fit-content" class="text-sm px-3 bg-blue-200 text-blue-800 rounded-full">{{ item.status }}</div>
                {% if item.isVerified == 1 %}
                  <div style="width:fit-content" class="mt-1 text-sm px-3 bg-green-200 text-green-800 rounded-full">Certifié</div>
                {% endif %}
                {% if item.isVerified != 1 %}
                  <div style="width:fit-content" class="mt-1 text-sm px-3 bg-red-200 text-red-800 rounded-full">Non certifié</div>
                {% endif %}

                <p class="text-gray-700 text-base mb-4 description">{{ item.description }}</p>
                <div class="mx-auto">
                  <a class="inline-block px-6 py-2.5 bg-indigo-800 text-white font-medium text-xs uppercase rounded shadow-md hover:bg-indigo-700" href="{{ path('front_app_deal_new', { item: item.id }) }}">Demander un échange pour cet objet</a>
                </div>
                {% for category in item.category %}
                  <div style="width:fit-content" class="text-sm px-3 bg-indigo-200 text-indigo-800 rounded-full mt-2">{{ category.name }}</div>
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
