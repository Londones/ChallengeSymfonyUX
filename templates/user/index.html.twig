{% extends 'base.html.twig' %}

{% block title %}
  Profil
{% endblock %}

{% block body %}
  <div class="sm:container md:mx-auto mt-8 shadow-lg shadow-indigo-500/20 rounded-lg bg-indigo-800">
    <div class="flex md:mx-auto h-screen rounded-lg bg-indigo-800 mt-[4rem]">
      <div class="bg-gray-50 w-1/5 rounded-lg mr-[1rem] ml-[4rem] mt-[4rem] mb-[4rem] shadow-2xl shadow-slate-50/20">
        <div class="rounded-lg m-8 w-48 mx-auto">
          <img class="rounded-lg" src="https://images.unsplash.com/photo-1609505848912-b7c3b8b4beda?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=765&q=80" rel="profil-picture" />
        </div>
        <div class="rounded-lg m-8 w-48 mx-auto">
          <p class="font-semibold">{{ app.user.name }}</p>
          <p class="font-thin">{{ app.user.email }}</p>
          <p>Membre depuis le {{ app.user.createdAt|date('m/d/Y') }}</p>
        </div>
      </div>
      <div class="bg-gray-50 w-4/5 rounded-lg ml-[1rem] mr-[4rem] mt-[4rem] mb-[4rem] shadow-2xl shadow-slate-50/20">
        <form class="m-8 rounded-lg shadow-md shadow-indigo-300/50 p-3">
          <h6 class="font-medium leading-tight -mx-4 mb-6 text-xl mt-0 mb-2 text-gray-800 md:mx-auto">Ajouter un objet</h6>
          <div class="flex flex-wrap -mx-3 mb-6 md:mx-auto">
            <div class="w-full px-3 mb-6 md:mb-0">
              <label class="block tracking-wide text-xs mb-2" for="grid-first-name">Nom de l'objet</label>
              <input class="appearance-none block w-full border-indigo-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" placeholder="Nom de l'objet" />
            </div>
          </div>
          <div class="flex flex-wrap -mx-3 mb-6 md:mx-auto">
            <div class="w-full px-3">
              <label class="block tracking-wide text-xs mb-2" for="grid-last-name">Description</label>
              <textarea class="appearance-none block w-full border-indigo-800 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="Description"></textarea>
            </div>
          </div>
          <div class="flex flex-wrap -mx-3 mb-6 md:mx-auto">
            <div class="w-full px-3">
              <label class="block tracking-wide text-xs mb-2">File</label>
              <input class="shadow-md shadow-gray-300/50 block w-full rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="file" placeholder="Description" />
            </div>
          </div>
          <div class="flex flex-wrap -mx-3 mb-2 md:mx-auto">
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block tracking-wide text-xs mb-2">Catégorie</label>
              <div class="relative text-x">
                <select class="block appearance-none w-full text-x border-indigo-800 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                  <option>Catégorie 1</option>
                  <option>Catégorie 2</option>
                  <option>Catégorie 3</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2">
                  <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                  </svg>
                </div>
              </div>
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block tracking-wide text-xs mb-2">Statut initial</label>
              <div class="relative text-x">
                <select class="block text-x appearance-none w-full border-indigo-800 text-gray-900 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                  <option>Statut 1</option>
                  <option>Statut 2</option>
                  <option>Statut 3</option>
                </select>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
